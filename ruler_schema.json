{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NFT Generator Rules Schema",
  "description": "Schema for the ruler.json file, defining trait compatibility rules.",
  "type": "object",
  "required": [
    "rules"
  ],
  "properties": {
    "rules": {
      "type": "array",
      "description": "A list of rules defining trait compatibility.",
      "items": {
        "type": "object",
        "required": [
          "if",
          "then"
        ],
        "properties": {
          "if": {
            "type": "object",
            "required": [
              "trait_type",
              "value"
            ],
            "properties": {
              "trait_type": {
                "type": "string",
                "description": "The trait type for the condition (e.g., 'Body', 'Mouth')."
              },
              "value": {
                "type": "array",
                "description": "A list of trait values that trigger the rule. Use '*' for any value.",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              }
            }
          },
          "then": {
            "type": "object",
            "required": [
              "trait_type",
              "excluded_values"
            ],
            "properties": {
              "trait_type": {
                "type": "string",
                "description": "The trait type that is affected by the rule."
              },
              "excluded_values": {
                "type": "array",
                "description": "A list of trait values that are excluded if the 'if' condition is met. Use '*' to exclude all values.",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              }
            }
          }
        }
      }
    }
  }
}